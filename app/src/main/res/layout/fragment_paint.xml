<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.PaintFragment">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pencil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fl_paint"
        />

    <FrameLayout
        android:id="@+id/fl_paint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/rv_pencil"
        app:layout_constraintBottom_toTopOf="@id/fl_tools"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.soft918.paintapp.domain.component.PaintView
            android:id="@+id/paint_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_tools"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/holo_red_dark"
        >

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>