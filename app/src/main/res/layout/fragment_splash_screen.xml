<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.SplashScreen">
    <FrameLayout
        android:id="@+id/iv_splash"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/splash_screen_iv_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_paint_spalsh"
            android:layout_gravity="center"
        />
    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_splash"
        android:text="Paint App V1.0"
        android:fontFamily="@font/vazirmatn_semi_bold"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:gravity="center"/>




</androidx.constraintlayout.widget.ConstraintLayout>